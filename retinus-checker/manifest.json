{
  "manifest_version": 2,

  "name": "Retinus Checker",
  "description": "Retinus unread counter",
  "version": "0.2",
  "icons": {
    "128":"icon.png"
  },
    
  "permissions": [
    "*://retin.us/*"
  ],
    
  "background": {
    "scripts": ["jquery.js","bg.js"]
  },
    
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://retin.us/*"],
      "js": ["jquery.js", "content.js"]
    }
  ]
  
}
